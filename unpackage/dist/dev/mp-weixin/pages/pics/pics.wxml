<view class="pics-container"><scroll-view class="pics-left" scroll-y="{{true}}"><block wx:for="{{selectData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['handleClickLeft',[index]]]]]}}" class="{{[active==index&&'active']}}" bindtap="__e">{{item.name}}</view></block></scroll-view><scroll-view class="pics-right" scroll-y="{{true}}"><block wx:for="{{selectImg}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view><image src="{{item.url}}" mode="aspectFill" data-event-opts="{{[['tap',[['handelPreviewImg',['$0'],[[['selectImg','',index,'url']]]]]]]}}" bindtap="__e"></image><text>{{item.text}}</text></view></block><block wx:if="{{selectImg.length==0}}"><view class="nodata">暂无数据</view></block></scroll-view></view>